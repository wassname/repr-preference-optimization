{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false
        },          
        {
            "name": "tinyllama",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
        },
        {
            "name": "llama",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false", "REPR_CONFIG": "./configs/llama3_7b.yaml"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
        },
        {
            "name": "dev",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false", 
            "REPR_CONFIG": "./configs/dev.yaml", "WANDB_MODE": "offline"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "projgrad",
                "--dev", 
                "--verbose=2",
                "--β=0.5", 
                "--negative-slope=0.1",
                "--magnitude-clip=0.2",
            ]
        },
        {
            "name": "scratch",
            "type": "debugpy",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0", 
            "TOKENIZERS_PARALLELISM": "false",
            //  "REPR_CONFIG": "./configs/dev.yaml", 
            //  "REPR_CONFIG": "./configs/llama3_7b.yaml", 
             "REPR_CONFIG": "./configs/tinyllama_a100.yaml", 
            //  "WANDB_MODE": "offline"
            },
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "autoReload": {"enable": true},
            "args": [
                // "hs-dist",
                "projgrad",
                "--verbose=2",
                "--β=0.5", 
                "--negative-slope=0.1",
                "--magnitude-clip=0.2",
                "--scale_orth",
                // "--loss.β=0.2",
                // "--eval_samples=128",
                // "--batch-size=24", 
                // "--lr=1e-5"
                // "--n_samples=6000",
            ]
        }
    ]
}
