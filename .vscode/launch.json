{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "dev tinymodel",
            "type": "debugpy",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "TOKENIZERS_PARALLELISM": "false",
                "REPR_CONFIG": "../configs/dev.yaml",
                "WANDB_MODE": "offline"
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            // "autoReload": {
            //     "enable": true
            // },
            "args": [
                "projbp",
                "--dev",
                "--verbose=3",
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "llama a100",
            "type": "debugpy",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "TOKENIZERS_PARALLELISM": "false",
                "REPR_CONFIG": "./configs/llama-3-7b_a100.yaml"
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
        },
        {
            "name": "dev 1B",
            "type": "debugpy",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "TOKENIZERS_PARALLELISM": "false",
                "REPR_CONFIG": "./configs/dev1b.yaml",
                "WANDB_MODE": "offline"
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "args": [
                "hs-ether-prefvec",
                "--dev",
                "--verbose=2",
            ]
        },
        {
            "name": "scratch",
            "type": "debugpy",
            "justMyCode": false,
            "env": {
                "CUDA_DEVICE_ORDER": "PCI_BUS_ID",
                // "CUDA_VISIBLE_DEVICES": "1",
                "TOKENIZERS_PARALLELISM": "false",
                "PYTORCH_CUDA_ALLOC_CONF": "expandable_segments:true",
                //  "REPR_CONFIG": "./configs/dev.yaml", 
                // "REPR_CONFIG": "./configs/llama-3-7b_a100.yaml"
                //  "REPR_CONFIG": "./configs/llama-3-2-1b.yaml", 
                //  "WANDB_MODE": "offline"
            }, 
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            },
            "args": [
                "hs-ether-InnerDPO",
                // "dpo",
                "--loss.align-method=orth",

                "--verbose=2",
            ]
        },
        {
            "name": "experiments",
            "type": "debugpy",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "TOKENIZERS_PARALLELISM": "false",
                "REPR_CONFIG": "./configs/llama-3-7b_a100.yaml",
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_experiments.py",
            "console": "integratedTerminal",
            // "justMyCode": false,
            "autoReload": {
                "enable": true
            },
            "args": [
                "--dev",
            ]
        }
    ]
}
