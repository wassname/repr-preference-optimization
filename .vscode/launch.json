    "version": "0.2.0",
    "configurations": [
        {
            "name": "tinyllama",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/nbs/train2.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
        },
        {
            "name": "llama",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false", "REPR_CONFIG": "../configs/llama3_7b.yaml"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/nbs/train2.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
        },
        {
            "name": "dev",
            "type": "debugpy",
            "env": {"CUDA_VISIBLE_DEVICES": "0", "TOKENIZERS_PARALLELISM": "false", "REPR_CONFIG": "../configs/dev.yaml"},
            "pythonArgs": ["-Xfrozen_modules=off"],
            "request": "launch",
            "program": "${workspaceFolder}/nbs/train2.py",
            "console": "integratedTerminal",
            "args": [
                "sidein-hra",
                "--dev", 
                "--verbose",
            ]
        }
    ]
}
